<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:background="@color/background1" android:layout_height="fill_parent"
	android:layout_width="fill_parent" android:padding="10dip"
	android:orientation="horizontal">
	
	<ScrollView android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	

	<LinearLayout android:orientation="vertical"
		android:layout_height="wrap_content" android:layout_width="fill_parent"
		android:layout_gravity="center">
		
		<ImageView android:src="@drawable/logo_texto" android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/imageView1" android:paddingBottom="35dp"></ImageView>
			
		<TextView android:layout_width="fill_parent"
			android:layout_weight="1" android:layout_height="wrap_content"
			android:text="@string/email" android:id="@+id/emailLbl"
			android:textColor="@color/fuente"/>
		<EditText android:layout_width="match_parent"
			android:layout_height="wrap_content" android:id="@+id/emailTxt"
			android:inputType="textEmailAddress" android:maxLength="30">
			<requestFocus></requestFocus>
		</EditText>
		<TextView android:layout_width="fill_parent"
			android:layout_weight="1" android:text="@string/pass" android:id="@+id/passLbl"
			android:layout_height="match_parent" android:layout_marginTop="15dp" 
			android:textColor="@color/fuente"/>
		<EditText android:layout_width="match_parent"
			android:layout_height="wrap_content" android:id="@+id/passTxt"
			android:inputType="textPassword" android:maxLength="20">

		</EditText>
		<Button android:layout_height="wrap_content" android:id="@+id/entrarBtn"
			android:text="@string/BtnLogin" android:onClick="btnValidarEmail"
			android:gravity="center_vertical|center_horizontal|center"
			android:layout_gravity="right" android:layout_width="100dp"
			android:layout_marginTop="10dp"></Button>
		<LinearLayout android:layout_height="wrap_content"
			android:id="@+id/linearLayout1" android:layout_gravity="right"
			android:layout_width="wrap_content" android:layout_marginTop="15dp">
			<TextView android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:text="Â¿No tienes cuenta?"
				android:id="@+id/textView1" android:textAppearance="?android:attr/textAppearanceLarge"
				android:paddingRight="10dp" android:layout_gravity="center_horizontal|center"
				android:textColor="@color/fuente"/>
			<Button android:id="@+id/button1" android:text="@string/BtnRegistrarse"
				android:onClick="btnRegistrarse" android:layout_gravity="right"
				android:layout_width="100dp" android:layout_height="wrap_content" android:layout_marginTop="10dp"></Button>
		</LinearLayout>
	</LinearLayout>
		</ScrollView>
</LinearLayout>
